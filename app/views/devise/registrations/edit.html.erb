<div class="form_registrations_edit">
  <h4>ユーザー編集</h4>

  <div class="form_page_edit">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %> 
      <%= render 'layouts/error_messages', model: f.object %>
   
   <div class="field">
      <%= f.label  "写真" %><br />
      <div class="edit_user_image">

      <div class="illustration", id="image-list" ></div>
        <% if @user.image.present? %> 
        <div class="gesuto-edit">
         <%= link_to image_tag(@user.image ), class:"user-image" %>
        </div> 
        <% else %> 
          <%= image_tag 'gesuto.png' %>
        <% end %>
      </div>
        <div id="image-list"></div>
        
        <%= f.file_field :image %>
        
      </div>
   
     <div class="field">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :nickname, maxlength:"12", class: "form-control sessions-form" %>
      </div>
    
    <div class="field">
        <%= f.label "性別" %><br />
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"form-select gender-select"}) %>
      </div>

    <div class="field">
        <%= f.label "年齢" %><br />
      <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"form-select gender-select"}) %>
      </div>

      <div class="field">
        <%= f.label "プロフィール" %><br />
        <%= f.text_area :profile,  placeholder:"例) エンジニア歴1年です！", maxlength:"200", rows:"6", class: "form-control sessions-form" %>
      </div>

    

      

      <div class="actions">
        <%= f.submit "更新", class: "button-4" %>
      </div>
      
    <% end %>
  </div>
</div>