<div class="form_registrations">
  <h4>新規登録</h4>

  <div class="form_page_new">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="field">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :nickname,  maxlength:"12", class: "form-control sessions-form" %>
      </div>
    
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス", class: "form-control sessions-form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, placeholder:"パスワード(半角英数字/6文字以上)", class: "form-control sessions-form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, class: "form-control sessions-form" %>
      </div>
      <div class="any">
        <h5>▷以下のフォームは任意です！</h5>
      </div>

     <div class="field">
      <%= f.label  "アイコン画像" %><br />
      <div class="illustration", id="image-list" ></div>
       <% if @user.image.present? %>
        
        <% else %>
        <div class="gesuto-registration">
         <%= image_tag ("user5.png") %>
        </div>
      <% end %>
        <%= f.file_field :image %>
      </div>

    <div class="field">
      <%= f.label "性別" %><br />
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"form-select gender-select"}) %>
      </div>

    <div class="field">
      <%= f.label "年齢" %><br />
      <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"form-select gender-select"}) %>
      </div>

    <div class="field">
      <%= f.label "プロフィール" %><br />
      <%= f.text_area :profile,  placeholder:"例) エンジニア歴1年です！", maxlength:"200", rows:"6", class: "form-control sessions-form" %> 
    </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "button-4" %>
      </div>
      
    <% end %>

    <div class="registrations-page">
     <%= link_to '＋ログインはこちら',  new_user_session_path %>
    </div>

  </div>
</div>
 



