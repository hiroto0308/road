<% breadcrumb :rooads %>
<div class="nickname_all">
<p>〜<%= current_user.nickname %>さんログイン中〜</p>
</div> 

 <%= image_tag 'touka.png', class: "index_kawauso" %>
<div class="new_text_form">
 <%= link_to '新規作成',  new_rooad_path, class: "button-20"  %>
